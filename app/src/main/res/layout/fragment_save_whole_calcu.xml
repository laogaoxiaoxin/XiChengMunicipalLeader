<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.save.SaveWholeCalcuFragment"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/ll_save_whole_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save_whole_top_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="90px"
            android:paddingTop="15px"
            android:paddingRight="90px"
            android:paddingBottom="15px"
            android:text="选择起始时间 "
            android:textColor="#fff"
            android:textSize="30px"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/save_whole_top_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="90px"
            android:paddingTop="15px"
            android:paddingRight="90px"
            android:paddingBottom="15px"
            android:text="选择终止时间 "
            android:textColor="#fff"
            android:textSize="30px"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <com.lovelyjiaming.municipalleader.views.customdraw.CustomDrawCirclePie
        android:id="@+id/save_whole_pie"
        android:layout_width="370px"
        android:layout_height="370px"
        android:layout_below="@id/ll_save_whole_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_save_whole_title"
        android:layout_alignTop="@id/save_whole_pie"
        android:layout_alignBottom="@id/save_whole_pie"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="50px"
                android:layout_height="20px"
                android:background="#9fDB394A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态一"
                android:textColor="#9fDB394A"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="50px"
                android:layout_height="20px"
                android:background="#9f9400D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态二"
                android:textColor="#9f9400D3"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="50px"
                android:layout_height="20px"
                android:background="#9f97FFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态三"
                android:textColor="#9f97FFFF"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="50px"
                android:layout_height="20px"
                android:background="#9f90EE90" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态四"
                android:textColor="#9f90EE90"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="50px"
                android:layout_height="20px"
                android:background="#9fCDCD00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态五"
                android:textColor="#9fCDCD00"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/save_whole_listtitle"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_below="@id/save_whole_pie"
        android:layout_marginTop="40px"
        android:background="#000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="250px"
            android:text="材料"
            android:textColor="#fff"
            android:textSize="35px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="250px"
            android:text="数量"
            android:textColor="#fff"
            android:textSize="35px"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/save_whole_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/save_whole_listtitle" />

</RelativeLayout>