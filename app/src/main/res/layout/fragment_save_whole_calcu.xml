<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.SaveWholeCalcuFragment"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/ll_save_whole_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save_whole_top_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingLeft="90px"
            android:paddingRight="90px"
            android:paddingTop="12px"
            android:text="周"
            android:textColor="#a4a4a4"
            android:textSize="30px" />

        <TextView
            android:id="@+id/save_whole_top_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingLeft="90px"
            android:paddingRight="90px"
            android:paddingTop="12px"
            android:text="月"
            android:textColor="#a4a4a4"
            android:textSize="30px" />

        <TextView
            android:id="@+id/save_whole_top_3month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingLeft="80px"
            android:paddingRight="80px"
            android:paddingTop="12px"
            android:text="季度"
            android:textColor="#a4a4a4"
            android:textSize="30px" />

        <TextView
            android:id="@+id/save_whole_top_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingLeft="80px"
            android:paddingRight="80px"
            android:paddingTop="12px"
            android:text="年度"
            android:textColor="#a4a4a4"
            android:textSize="30px" />
    </LinearLayout>

    <com.lovelyjiaming.municipalleader.views.customdraw.CustomDrawCirclePie
        android:id="@+id/save_whole_pie"
        android:layout_width="480px"
        android:layout_height="480px"
        android:layout_below="@id/ll_save_whole_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/ll_save_whole_title"
        android:layout_marginEnd="40px"
        android:layout_marginTop="250px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="40px"
                android:layout_height="30px"
                android:background="#DB394A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态一"
                android:textColor="#DB394A"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="40px"
                android:layout_height="30px"
                android:background="#9400D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态二"
                android:textColor="#9400D3"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="40px"
                android:layout_height="30px"
                android:background="#97FFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态三"
                android:textColor="#97FFFF"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="40px"
                android:layout_height="30px"
                android:background="#90EE90" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态四"
                android:textColor="#90EE90"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="40px"
                android:layout_height="30px"
                android:background="#CDCD00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:text="状态五"
                android:textColor="#CDCD00"
                android:textSize="25px"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>