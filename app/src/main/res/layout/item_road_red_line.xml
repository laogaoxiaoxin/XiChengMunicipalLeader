<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10px"
    android:paddingTop="20px"
    android:paddingEnd="10px"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/item_road_red_line_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_street"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/item_road_red_line_infraredRoadLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_infraredRoadWidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_infraredRoadArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/item_road_red_line_infraredSidewalkLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_infraredSidewalkWidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_infraredSidewalkArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/item_road_red_line_infraredStoneLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_infraredStoneWidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_road_red_line_infraredStoneArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="10"
            android:textColor="#000"
            android:textSize="30px"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>