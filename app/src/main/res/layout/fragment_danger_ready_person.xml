<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.danger.DangerReadyPersonFragment"
    tools:ignore="PxUsage">

    <TextView
        android:id="@+id/danger_ready_person_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginTop="55px"
        android:text="查询时间：点击选择时间"
        android:textColor="#000"
        android:textSize="40px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50px"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/danger_ready_person_north"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="16px"
            android:text="长安街以北"
            android:textColor="#a9a9a9"
            android:textSize="30px" />

        <TextView
            android:id="@+id/danger_ready_person_south"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="16px"
            android:text="长安街以南"
            android:textColor="#a9a9a9"
            android:textSize="30px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/danger_ready_person_titile2"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="200px"
        android:background="#000"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#fff"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="性别"
            android:textColor="#fff"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="职务"
            android:textColor="#fff"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="电话"
            android:textColor="#fff"
            android:textSize="32px"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/danger_ready_person_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/danger_ready_person_titile2" />

</RelativeLayout>