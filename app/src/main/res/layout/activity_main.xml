<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".views.activitys.MainActivity"
    tools:ignore="PxUsage">

    <RelativeLayout
        android:id="@+id/main_top_titles"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="西城道路综合管理系统 "
            android:textColor="#fff"
            android:textSize="40px"
            android:textStyle="italic|bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="#FFFFF0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_main_bottom_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_bottom_tools_check"
                android:layout_width="55px"
                android:layout_height="55px"
                android:scaleType="fitXY"
                android:src="@drawable/main_bottom_tools_check_selected" />

            <TextView
                android:id="@+id/tv_main_bottom_tools_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="巡查"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_bottom_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_bottom_tools_save"
                android:layout_width="55px"
                android:layout_height="55px"
                android:scaleType="fitXY"
                android:src="@drawable/main_bottom_tools_save" />

            <TextView
                android:id="@+id/tv_main_bottom_tools_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="养护"
                android:textColor="#000"
                android:textSize="25px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_bottom_danger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_bottom_tools_danger"
                android:layout_width="55px"
                android:layout_height="55px"
                android:scaleType="fitXY"
                android:src="@drawable/main_bottom_tools_danger" />

            <TextView
                android:id="@+id/tv_main_bottom_tools_danger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="应急"
                android:textColor="#000"
                android:textSize="25px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_bottom_engineer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_bottom_tools_engineer"
                android:layout_width="55px"
                android:layout_height="55px"
                android:scaleType="fitXY"
                android:src="@drawable/main_bottom_tools_engineer" />

            <TextView
                android:id="@+id/tv_main_bottom_tools_engineer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="工程"
                android:textColor="#000"
                android:textSize="25px" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121px"
        android:background="#ddd" />

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_top_titles"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121px" />

</RelativeLayout>