<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.engineer.EngineerCurrentFragment"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/ll_engineer_current_title_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/danger_ready_person_north"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="16px"
            android:text="常规工程"
            android:textColor="#a9a9a9"
            android:textSize="30px" />

        <TextView
            android:id="@+id/danger_ready_person_south"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10px"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingBottom="16px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="16px"
            android:text="重点工程"
            android:textColor="#a9a9a9"
            android:textSize="30px" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/engineer_usual_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_engineer_current_title_choose"
        android:layout_marginTop="20px" />

</RelativeLayout>