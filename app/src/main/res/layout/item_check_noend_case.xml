<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <TextView
        android:id="@+id/check_noend_case_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginTop="30px"
        android:text="育德胡同布道破损（任务名称）"
        android:textColor="#000"
        android:textSize="35px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/check_noend_case_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/check_noend_case_name"
        android:layout_marginStart="50px"
        android:layout_toEndOf="@id/check_noend_case_name"
        android:background="@drawable/bg_corner"
        android:gravity="center"
        android:padding="7px"
        android:text="未分配"
        android:textColor="#a4a4a4"
        android:textSize="18px" />

    <LinearLayout
        android:id="@+id/ll_check_noend_notime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_noend_case_name"
        android:layout_marginStart="50px"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_noend_case_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="编号：201839039192"
            android:textColor="#000"
            android:textSize="26px" />

        <TextView
            android:id="@+id/check_noend_case_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:gravity="center"
            android:text="2018-08-01      17:12:30"
            android:textColor="#000"
            android:textSize="26px" />

    </LinearLayout>

    <ImageView
        android:id="@+id/check_noend_case_img"
        android:layout_width="110px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll_check_noend_notime"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/check_noend_case_name"
        android:scaleType="fitXY"
        android:src="@drawable/main_bottom_tools_engineer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ll_check_noend_notime"
        android:layout_marginTop="30px"
        android:background="#a7a7a7" />
</RelativeLayout>