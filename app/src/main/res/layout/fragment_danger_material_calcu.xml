<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.danger.DangerMaterialCalcuFragment"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_danger_material_type_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/danger_title_material_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner"
                android:gravity="center"
                android:paddingLeft="80px"
                android:paddingTop="10px"
                android:paddingRight="80px"
                android:paddingBottom="10px"
                android:text="车辆"
                android:textColor="@color/colorPrimary"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danger_title_material_mach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10px"
                android:background="@drawable/bg_corner"
                android:gravity="center"
                android:paddingLeft="80px"
                android:paddingTop="10px"
                android:paddingRight="80px"
                android:paddingBottom="10px"
                android:text="机械"
                android:textColor="#a4a4a4"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danger_title_material_smallmach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10px"
                android:background="@drawable/bg_corner"
                android:gravity="center"
                android:paddingLeft="60px"
                android:paddingTop="10px"
                android:paddingRight="60px"
                android:paddingBottom="10px"
                android:text="小型机械"
                android:textColor="#a4a4a4"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danger_title_material_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10px"
                android:background="@drawable/bg_corner"
                android:gravity="center"
                android:paddingLeft="60px"
                android:paddingTop="10px"
                android:paddingRight="60px"
                android:paddingBottom="10px"
                android:text="抢险物资"
                android:textColor="#a4a4a4"
                android:textSize="30px"
                android:textStyle="bold" />

        </LinearLayout>

        <com.lovelyjiaming.municipalleader.views.customdraw.CustomDrawHorizontalColumn
            android:id="@+id/danger_type_calc_column"
            android:layout_width="match_parent"
            android:layout_height="1290px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50px"
            android:layout_marginTop="25px"
            android:layout_marginRight="50px" />

        <LinearLayout
            android:id="@+id/ll_danger_material_type_title2"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="2px"
            android:background="#000"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/danger_material_type_title21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="车号"
                android:textColor="#fff"
                android:textSize="32px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danger_material_type_title22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="车型"
                android:textColor="#fff"
                android:textSize="32px"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/danger_material_calc_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>