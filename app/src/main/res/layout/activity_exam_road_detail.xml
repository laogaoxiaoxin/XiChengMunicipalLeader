<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".views.activitys.ExamRoadDetailActivity"
    tools:ignore="PxUsage">

    <RelativeLayout
        android:id="@+id/rl_exam_road_detail_title"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/check_exam_road_detail_back"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="审批掘路任务详情 "
            android:textColor="#fff"
            android:textSize="40px"
            android:textStyle="italic|bold" />
    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_exam_road_detail_title"
        android:layout_marginTop="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="案件名称："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="案件编号："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="案件类型："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巡查小组："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_patrolgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="掘路位置："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发生日期："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束日期："
                    android:textColor="#000"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/check_exam_road_detail_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:background="#fff"
                    android:maxLines="100"
                    android:textColor="#000"
                    android:textSize="35px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/check_exam_road_detail_firstpic"
                    android:layout_width="300px"
                    android:layout_height="230px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/check_exam_road_detail_secondpic"
                    android:layout_width="300px"
                    android:layout_height="230px"
                    android:layout_marginStart="20px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/check_exam_road_detail_thirdpic"
                    android:layout_width="300px"
                    android:layout_height="230px"
                    android:layout_marginStart="20px"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/check_exam_road_detail_fourthpic"
                    android:layout_width="300px"
                    android:layout_height="230px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/check_exam_road_detail_fifthpic"
                    android:layout_width="300px"
                    android:layout_height="230px"
                    android:layout_marginStart="20px"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/check_exam_road_detail_sixthpic"
                    android:layout_width="300px"
                    android:layout_height="230px"
                    android:layout_marginStart="20px"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <TextView
                android:id="@+id/check_exam_road_detail_more_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px"
                android:layout_marginTop="30px"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="20px"
                android:paddingTop="15px"
                android:paddingRight="20px"
                android:paddingBottom="15px"
                android:text="更多监管日志 "
                android:textColor="#fff"
                android:textSize="29px"
                android:textStyle="italic|bold" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>